<h2>
  购 物 车
</h2>

<!-- 购物清单 -->
<table>
  <%= render(cart.line_items) %>
  <!-- 总金额 -->
  <tr class="total_line">
    <td colspan="2">总计：</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<div class="bt_base">
  <!-- 结算购物车 -->
  <%= button_to '结算', new_order_path, method: :get, class: 'bt'%>
  <!-- 清空购物车 -->
  <%= button_to '清空', @cart, method: :delete, data: {confirm: 'Are you sure?'}, class: 'bt'%>
</div>
